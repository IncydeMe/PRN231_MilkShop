@{
    Layout = "~/Views/Customer/Layout/_CustomerLayout.cshtml";
}

<div class="row justify-content-center align-items-center g-2">
    <div class="col max-w-md p-8 space-y-6 rounded-lg shadow-md me-5">
        <h1 class="gaegu-bold">
            Welcome to Milk Store
        </h1>
        <p class="fs-4 gaegu-regular">
            Let's setup your account here!
        </p>
        <form>
            <div class="mb-3">
                <label for="email" class="form-label gaegu-regular fs-4">Email</label>
                <div class="d-flex">
                    <i class="fa fa-envelope border rounded-3 text-secondary"
                       style="padding: 10px; min-width: 50px; text-align: center;"></i>
                    <input type="email" id="email" class="form-control gaegu-regular fs-5" placeholder="Enter your email" aria-describedby="emailExc" />
                </div>
                <p id="emailExc" class="form-text text-danger">This is error/exception</p>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label gaegu-regular fs-4">Password</label>
                <div class="d-flex">
                    <i class="fa fa-key border rounded-3 text-secondary"
                       style="padding: 10px; min-width: 50px; text-align: center;"></i>
                    <input type="password" id="password" class="form-control gaegu-regular fs-5" placeholder="Enter your password"
                           aria-describedby="passExc" />
                </div>
                <p id="passExc" class="form-text text-danger">This is password error/exception</p>
            </div>
            <div class="mb-3">
                <label for="cf_password" class="form-label gaegu-regular fs-4">Confirm Password</label>
                <div class="d-flex">
                    <i class="fa fa-key border rounded-3 text-secondary"
                       style="padding: 10px; min-width: 50px; text-align: center;"></i>
                    <input type="password" id="cf_password" class="form-control gaegu-regular fs-5" placeholder="Confirm your password"
                           aria-describedby="cf_passExc" />
                </div>
                <p id="cf_passExc" class="form-text text-danger">This is password error/exception</p>
            </div>
            <div>
                <p class="gaegu-regular">
                    <i class="fa fa-info-circle"></i>
                    By signing up and become a Member, you're agree to the <a href="#" class="gaegu-bold">Terms of Service</a> and <a href="#" class="gaegu-bold">Privacy Policy</a>
                </p>
            </div>
            <button type="submit" class="w-100 btn btn-hover gaegu-bold fs-4" style="background-color: #F9A8D4;">
                Continue >>
            </button>
        </form>

        <div class="text-center m-3 gaegu-regular fs-5 text-secondary">
            Already have an account?
            <a href="/Login" class="gaegu-bold link-secondary">Login Here!</a>
        </div>
    </div>

    <div class="col items-center justify-center p-8">
        <img src="https://images.unsplash.com/photo-1526277015674-026cb84653ec?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Cute baby"
             class="w-100 h-auto rounded-3 shadow" />
    </div>
</div>