@using MilkData.Models
@{
    ViewData["Title"] = "Edit";
}

@model Order

<div class="form-group row">
    <div class="col-md-6">
        <label for="1">OrderId</label>
        @Html.HiddenFor(model => model.OrderId)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="1">AccountId:</label>
        @Html.EditorFor(model => model.AccountId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">VoucherCode:</label>
        @Html.EditorFor(model => model.VoucherCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">TotalPrice:</label>
        @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="1">Status:</label>
        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
