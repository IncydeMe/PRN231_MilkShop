<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/staff/layout/stafflayout.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
	<script src="~/js/staff/staff.js"></script>
</head>
<body>
	<nav class="sidebar">
		<img src="../img/Logo.png" alt="Logo" id="logo">
		<ul>
			<li id="item-dashboard">
				<a href="#">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
						<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
							<rect width="18" height="7" x="3" y="3" rx="1" />
							<rect width="9" height="7" x="3" y="14" rx="1" />
							<rect width="5" height="7" x="16" y="14" rx="1" />
						</g>
					</svg>
					<span>Dashboard</span>
				</a>
			</li>
			<li id="item-products">
				<a href="#">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
						<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
							<path d="m7.5 4.27l9 5.15M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z" />
							<path d="m3.3 7l8.7 5l8.7-5M12 22V12" />
						</g>
					</svg>
					<span>Product</span>
				</a>
			</li>
			<li id="item-orders">
				<div class="parent">
					<a href="#">
						<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
							<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6h11m-11 6h11m-11 6h11M4 6h1v4m-1 0h2m0 8H4c0-1 2-2 2-3s-1-1.5-2-1" />
						</svg>
						<span>Orders</span>
						<svg class="arrow" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
							<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5H9m6 4v3h4l-7 7l-7-7h4V9z" />
						</svg>
					</a>
					<!-- Dropdown with mini items -->
					<ul class="sub-item">
						<li id="sub-item-1">
							<a href="#">
								<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
									<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
										<circle cx="8" cy="21" r="1" />
										<circle cx="19" cy="21" r="1" />
										<path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" />
									</g>
								</svg>
								<span>Order List</span>

							</a>
						</li>
						<li id="sub-item-2">
							<a href="#">
								<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
									<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 21l-7-4l-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" />
								</svg>
								<span>Pre-Order List</span>
							</a>
						</li>
					</ul>
				</div>
			</li>
			<li id="item-messages">
				<a href="#">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
						<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z" />
					</svg>
					<span>Messages</span>
				</a>
			</li>
			<li id="item-blogs">
				<a href="#">
					<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
						<g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
							<path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2m0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2m12 5h-8m5 4h-5" />
							<path d="M10 6h8v4h-8z" />
						</g>
					</svg>
					<span>Blogs</span>
				</a>
			</li>
		</ul>
	</nav>
	<section>
		<section class="personal">
			<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
				<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9m4.3 13a1.94 1.94 0 0 0 3.4 0M4 2C2.8 3.7 2 5.7 2 8m20 0c0-2.3-.8-4.3-2-6" />
			</svg>
			<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
				<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.9 20A9 9 0 1 0 4 16.1L2 22Zm.1-8h.01M12 12h.01M16 12h.01" />
			</svg>
			<div class="menu">
				<div id="avatar"></div>
				<div class="avatar-menu">
					<a href="#">Profile</a>
					<hr />
					<a href="#">Notifications</a>
					<a href="#">Settings</a>
					<hr />
					<a href="#">Signout</a>
				</div>
			</div>
		</section>
		<div>
			@RenderBody()
		</div>
	</section>
	<footer>
		<div id="footer-content">
			<div id="footer-logo">
				<img src="~/img/hugeicons--milk-bottle-white.svg" alt="Logo" />
				<h1>Milk Store</h1>
			</div>
			<div id="footer-options">
				<div id="footer-options-contact">
					<h3>Contacts</h3>
					<span>
						<h6>Phone Number:</h6>
						<p>+6012-3456789</p>
					</span>
					<span>
						<h6>Email:</h6>
						<p>test@test.com</p>
					</span>
					<span>
						<h6>Address:</h6>
						<p>123, Jalan Test, Test City, 12345</p>
					</span>
					<div id="footer-social">
						<h6>Social Links:</h6>
						<div id="images">
							<a href="facebook.com">
								<img src="~/img/logos_facebook.png" alt="Facebook" />
							</a>
							<a href="instagram.com">
								<img src="~/img/skill-icons_instagram.png" alt="Instagram" />
							</a>
						</div>
					</div>
				</div>
				<div id="footer-options-nav">
					<h3>More</h3>
					<ul>
						<li>
							<a href="#">FAQs</a>
						</li>
						<li>
							<a href="#">Browse</a>
						</li>
						<li>
							<a href="#">Account</a>
						</li>
						<li>
							<a href="#">Privacy Policy</a>
						</li>
						<li>
							<a href="#">Terms and Conditions</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>
