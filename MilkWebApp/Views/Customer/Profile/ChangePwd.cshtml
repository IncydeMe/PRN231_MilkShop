@{
    Layout = "~/Views/Customer/Profile/Layout/_ProfileLayout.cshtml";
}

<div class="w-100 bg-white rounded">
    <div class="d-flex align-items-center justify-content-around pt-3">
        <div class="d-flex flex-column align-items-center">
            <a asp-controller="Customer" asp-action="PersonalInfo" class="m-0 text-center text-decoration-none" style="color: #FF379B;">Personal Information</a>
        </div>
        <div class="d-flex flex-column align-items-center">
            <a asp-controller="Customer" asp-action="ChangePwd" class="m-0 text-center text-decoration-none" style="color: #FF379B;">Change Password</a>
            <div class="rounded borderBotPr"></div>
        </div>
    </div>
    <hr />
    <form class="m-5 pb-3">
        <div class="mb-3">
            <label for="oldPwd" class="form-label outfit-regular fs-4">Old Password</label>
            <div class="d-flex">
                <i class="fa fa-lock border rounded-3 text-secondary"
                   style="padding: 10px; min-width: 50px; text-align: center;"></i>
                <input type="password" id="oldPwd" class="form-control outfit-regular fs-5" placeholder="Enter your old password"
                       aria-describedby="oldPwdExc" autocomplete="current-password" required />
            </div>
            <p id="oldPwdExc" class="form-text text-danger">This is password error/exception</p>
        </div>
        <div class="mb-3">
            <label for="newPwd" class="form-label outfit-regular fs-4">New Password</label>
            <div class="d-flex">
                <i class="fa fa-lock border rounded-3 text-secondary"
                   style="padding: 10px; min-width: 50px; text-align: center;"></i>
                <input type="password" id="newPwd" class="form-control outfit-regular fs-5" placeholder="Enter your new password"
                       aria-describedby="newPwdExc" autocomplete="current-password" required />
            </div>
            <p id="newPwdExc" class="form-text text-danger">This is password error/exception</p>
        </div>
        <div class="mb-3">
            <label for="cfPwd" class="form-label outfit-regular fs-4">Confirm password</label>
            <div class="d-flex">
                <i class="fa fa-lock border rounded-3 text-secondary"
                   style="padding: 10px; min-width: 50px; text-align: center;"></i>
                <input type="password" id="cfPwd" class="form-control outfit-regular fs-5" placeholder="Re-Enter your new password"
                       aria-describedby="cfPwdExc" autocomplete="current-password" required />
            </div>
            <p id="cfPwdExc" class="form-text text-danger">This is password error/exception</p>
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="w-25 btn btn-hover outfit-bold fs-4" style="background-color: #F9A8D4; color: var(--pink-800);">
                Save
            </button>
        </div>
    </form>
</div>